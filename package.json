{
  "name": "tlou-backend",
  "version": "1.0.0",
  "description": "类似微信朋友圈的后端API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:fast": "jest --maxWorkers=75% --testTimeout=5000 --verbose=false",
    "test:unit": "jest --config=jest.config.unit.js",
    "test:integration": "jest --testPathPattern=tests/integration --testTimeout=15000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "express",
    "mongodb",
    "social-media",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
